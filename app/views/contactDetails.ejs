<% include partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <% if(locals.err) { %>
                    <p class="alert alert-danger"> <%= err %> </p>
                    <a href="/" class="btn btn-lg btn-danger">Back to Home !</a>
                <% } else { %>
                    <img src=<%= data.image %> alt="" class="img-circle" style="height:150px; width:150px;">
                    <hr>
                    <p>
                        <b style="font-size:1.8em;"><%= data.firstName + ' ' + data.lastName %></b>
                    </p>
                    <div class="row" style="font-weight:bold;">
                        <p class="glyphicon glyphicon-phone col-md-1 col-md-offset-3"></p>
                        <p class="text-warning col-md-4"><%= data.mobile %></p>
                    </div>
                    <div class="row" style="font-weight:bold;">
                        <p class="glyphicon glyphicon-map-marker col-md-1 col-md-offset-3"></p>
                        <p class="text-success col-md-8 text-left"><%= data.address %></p>
                    </div>           
                    <hr>
                    <a href=<%= '/compose/' + parseInt(data.mobile)%> class="btn btn-lg btn-primary">Send Message &nbsp; 
                    <span class="glyphicon glyphicon-edit"></span></a> 
                    <a href="/" class="btn btn-lg btn-danger"> Back to Home</a>    
                <% }%>
            </div>
        </div>
    </div>

<% include partials/footer %>