<% include partials/header %>
    <!-- Page Content -->

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
    <h2 class="text-danger">Send OTP SMS to Contacts</h2>
    <h4 class="text-primary">Available Contacts</h4>
    <hr>    
    <br>
    <% if(locals.data) { %>
        <table class="table">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Mobile</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% data.contacts.forEach((contact) => { %>
                    <tr>
                        <td style="text-align:left"><%= contact.firstName %></td>
                        <td style="text-align:left"><%= contact.lastName %></td>
                        <td style="text-align:left"><%= contact.mobile %></td>
                        <td> <a href=<%= '/contacts/details/' + parseInt(contact.mobile) %> class="btn btn-primary">View Details</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="alert alert-danger"><%= err %></p>
    <% }%>
    </div>
  </div>
</div>
    <!-- /.container -->
<% include partials/footer %>